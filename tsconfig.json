{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"app/api/auth/[...nextauth]/route.ts",
		"middleware.ts",
		"app/seed/route.ts",
		"app/qrcode/page.tsx.disabled",
		"app/(Login Page)/login/api/setcookie/route.ts",
		"app/(Home Page)/home/(Cham cong table)/(PC)/api/route.ts"
	],
	"exclude": ["node_modules"]
}
